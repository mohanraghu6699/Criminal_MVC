@model IEnumerable<Criminal_RM_Using_MVC.Models.Victim>

@{
    ViewBag.Title = "Index";
    <link href="~/Styles/SearchStyle.css" rel="stylesheet" />
    <link href="~/Styles/TableStyle.css" rel="stylesheet" />
}

<h2>Victims</h2>

@using (@Html.BeginForm())
{
    <div class="search-box">
        <button class="btn-search"><span class="glyphicon glyphicon-search"></span></button>
        <input type="text" name="SearchFilter" class="input-search" placeholder="Search Victim...">
    </div>
}
<p>
    @if (!(User.IsInRole("PC") || User.IsInRole("SI")))
    {
    <div style="margin-left:10%">
        <button class="createIcon" onclick="location.href='@Url.Action("Create", "Victims")';return false;">Create New</button>
    </div>
    }
</p>
<div class="image">
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Victim_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DOB)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DODeath)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cause_Of_Death)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Victim_Name, "RoutetoVictimData", new { ID = item.Victim_ID }, new{@class="myclass"})
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DOB)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DODeath)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cause_Of_Death)
                    </td>
                    <td>
                        <img src="@Html.DisplayFor(modelItem => item.Image)" , width="80px" height="100px" />
                    </td>
                    <td>
                        @if (!User.IsInRole("PC"))
                        {
                        <button onclick="location.href='@Url.Action("Edit", "Victims",new { id = item.Victim_ID})';return false;"><span class="glyphicon glyphicon-edit icons"></span></button>
                        }
                        <button onclick="location.href='@Url.Action("Details", "Victims",new { id = item.Victim_ID})';return false;"><span class="glyphicon glyphicon-eye-open icons"></span></button>
                        @if (!(User.IsInRole("PC") || User.IsInRole("SI")))
                        {
                        <button onclick="location.href='@Url.Action("Delete", "Victims",new { id = item.Victim_ID})';return false;"><span class="glyphicon glyphicon-trash icons"></span></button>
                        }

                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>
