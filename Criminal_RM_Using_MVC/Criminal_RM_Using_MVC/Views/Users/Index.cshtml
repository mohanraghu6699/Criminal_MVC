@model IEnumerable<Criminal_RM_Using_MVC.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>

</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.User_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position.Position_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position.Position_Name)
        </td>
        <td>
            @if (User.IsInRole("DCP") || User.IsInRole("JCP") || User.IsInRole("ACP"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.User_ID })
            }
        </td>
    </tr>
}

</table>
